<h1>Admin Shelters Index</h1>

<% @shelters.each do |shelter| %>
  <h2>Name: <%= shelter.name  %></h2>
  <p>Foster Program?: <%= shelter.foster_program %></p>
  <p>City: <%= shelter.city %></p>
  <p>Rank: <%= shelter.rank %></p>
<% end %>

<div id="pending">
  <h2>Shelters with Pending Applications</h2>
  <% @pending_shelters.each do |shelter| %>
    <h3><%= shelter.name %></h3>
  <% end %>
</div>
